<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omar.apvalley.AfzonderlijkFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"

        >


        <Spinner
            android:id="@+id/kies"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"

            android:layout_weight="1"
            android:entries="@array/scholen_array"
            android:spinnerMode="dialog"
            android:text="Kies het departement"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/kies1"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"


            android:layout_weight="1"
            android:entries="@array/richtingen_array"
            android:spinnerMode="dialog"
            android:text="Kies het departement"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/kies2"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"

            android:layout_weight="1.1"
            android:entries="@array/klas_array"
            android:spinnerMode="dialog"
            android:text="Kies het departement"
            android:textAlignment="center" />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/titel"

        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:background="@android:color/darker_gray" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clipToPadding="false"
            android:scrollbars="vertical">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>
